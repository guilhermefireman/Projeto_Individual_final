<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Gerenciar Eventos</title>
  <style>
    body {
      background: #121212;
      color: white;
      font-family: Arial, sans-serif;
      padding: 30px;
    }

    h1 {
      margin-bottom: 20px;
    }

    a.button {
      background: #F06292;
      color: white;
      padding: 10px 15px;
      text-decoration: none;
      border-radius: 6px;
      display: inline-block;
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #222;
      border-radius: 8px;
      overflow: hidden;
    }

    th, td {
      padding: 12px;
      border-bottom: 1px solid #444;
      text-align: left;
    }

    tr:hover {
      background: #333;
    }

    .actions button {
      background: #ff5252;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 4px;
      cursor: pointer;
    }

    .actions a {
      margin-right: 10px;
      color: #90caf9;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <h1>Eventos Cadastrados</h1>

  <a class="button" href="/admin/eventos/novo">+ Novo Evento</a>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cidade</th>
        <th>Data</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (eventos && eventos.length > 0) { %>
        <% eventos.forEach(evento => { %>
          <tr>
            <td><%= evento.nome %></td>
            <td><%= evento.cidade %></td>
            <td><%= new Date(evento.data).toLocaleDateString('pt-BR') %></td>
            <td class="actions">
              <a href="/admin/eventos/<%= evento.id %>/editar">Editar</a>
              <button onclick="deletarEventoFetch('<%= evento.id %>')">Excluir</button>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="4">Nenhum evento cadastrado.</td></tr>
      <% } %>
    </tbody>
  </table>

  <script>
    async function deletarEventoFetch(id) {
      if (!confirm("Tem certeza que deseja excluir este evento?")) return;

      try {
        const resposta = await fetch(`/admin/eventos/${id}`, {
          method: 'DELETE'
        });

        const resultado = await resposta.json();

        if (resposta.ok) {
          alert('Evento excluído com sucesso!');
          location.reload();
        } else {
          alert(resultado.erro || 'Erro ao excluir.');
        }
      } catch (err) {
        alert('Erro inesperado: ' + err.message);
      }
    }
  </script>
</body>
</html>
